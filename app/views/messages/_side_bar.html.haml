.Side-bar
  .Side-bar__user-name
    .Side-bar__top-items
      .Side-bar__top-items--name
        = current_user.name
      .Side-bar__top-items--icon
        = link_to new_group_path, class: "Side-bar__top-items--edit" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "Side-bar__top-items--cog" do
          = icon('fas', 'cog')
  .Side-bar__group-list
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message